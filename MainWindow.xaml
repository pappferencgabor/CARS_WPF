<Window x:Class="CARS_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CARS_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1280"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.075*" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Center"
                    Orientation="Horizontal">

            <Button x:Name="btnFeladatA"
                    Content="A feladat"
                    Width="150"
                    Height="32"
                    FontSize="20"
                    Margin="10 0 5 0"
                    Click="btnFeladatA_Click" />

            <Button x:Name="btnFeladatB"
                    Content="B feladat"
                    Width="150"
                    Height="32"
                    FontSize="20"
                    Margin="5"
                    Click="btnFeladatB_Click" />

            <Button x:Name="btnFeladatC"
                    Content="C feladat"
                    Width="150"
                    Height="32"
                    FontSize="20"
                    Margin="5"
                    Click="btnFeladatC_Click" />
        </StackPanel>

        <Frame x:Name="frameMain"
               Grid.Row="1"
               NavigationUIVisibility="Hidden"
               Margin="10 0 10 10" />
    </Grid>
</Window>
